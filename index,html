<script>
    /* --- LOGIKA KALKULATOR BEP (LKPD) --- */
    function hitungBEP() {
        // Ambil nilai
        const fc = parseFloat(document.getElementById('fcInput').value);
        const vc = parseFloat(document.getElementById('vcInput').value);
        const p = parseFloat(document.getElementById('pInput').value);
        const resultBox = document.getElementById('lkpdResult');
        const content = document.getElementById('resultContent');

        // Validasi Input Kosong
        if (isNaN(fc) || isNaN(vc) || isNaN(p)) {
            alert("Harap isi semua kolom angka (Biaya Tetap, Variabel, dan Harga)!");
            return;
        }

        // Tampilkan Box
        resultBox.style.display = 'block';

        // Validasi Logika Bisnis (Harga < Modal)
        if (p <= vc) {
            resultBox.className = "result-box error";
            content.innerHTML = `
                <strong>‚ö†Ô∏è PERINGATAN BISNIS:</strong><br>
                Harga Jual (Rp ${p.toLocaleString()}) lebih kecil atau sama dengan Modal Variabel (Rp ${vc.toLocaleString()}).<br>
                Anda tidak akan pernah untung. <strong>Naikkan Harga Jual</strong> atau <strong>Tekan Biaya Produksi!</strong>
            `;
            return;
        }

        // Hitung BEP
        const margin = p - vc;
        const bep = fc / margin;
        const bepRounded = Math.ceil(bep); // Pembulatan ke atas

        resultBox.className = "result-box success";
        content.innerHTML = `
            <div style="font-size: 1.1rem; margin-bottom: 10px;">
                Target Minimal Penjualan: <strong style="font-size: 1.5rem;">${bepRounded} Unit</strong> per Bulan.
            </div>
            <ul style="margin: 0; padding-left: 20px; font-size: 0.95rem;">
                <li>Margin Kontribusi (Untung Kotor) per unit: Rp ${margin.toLocaleString()}</li>
                <li>Pada unit ke-${bepRounded}, biaya tetap Rp ${fc.toLocaleString()} lunas tertutupi.</li>
                <li>Keuntungan bersih dimulai dari penjualan unit ke-${bepRounded + 1}.</li>
            </ul>
        `;
    }

    /* --- LOGIKA KUIS --- */
    const quizData = [
        {
            q: "Apa arti kondisi BEP bagi seorang pengusaha?",
            opts: ["Keuntungan maksimal", "Titik Impas (Balik Modal)", "Kerugian total", "Target Investor"],
            correct: 1,
            hint: "Pendapatan = Pengeluaran."
        },
        {
            q: "Mana yang termasuk Biaya Tetap (Fixed Cost) usaha servis komputer?",
            opts: ["Beli Pasta Processor", "Bensin antar barang", "Biaya Internet Bulanan", "Upah lembur"],
            correct: 2,
            hint: "Biaya ini dibayar rutin tiap bulan, tak peduli ada order atau tidak."
        },
        {
            q: "Apa keunggulan utama Produk Digital (Software) terkait biaya?",
            opts: ["Biaya Variabel (Copy produk) hampir Nol", "Biaya pembuatan awal murah", "Tidak butuh marketing", "Harga selalu murah"],
            correct: 0,
            hint: "Sekali coding, bisa dicopy ke jutaan orang tanpa biaya tambahan."
        },
        {
            q: "Rumus BEP Unit yang benar adalah...",
            opts: ["FC / (P + VC)", "FC / (P - VC)", "(P - VC) / FC", "VC / P"],
            correct: 1,
            hint: "Biaya Tetap dibagi Margin Kontribusi."
        },
        {
            q: "Jika usaha sepi (di bawah BEP), langkah evaluasi yang tepat adalah...",
            opts: ["Tutup usaha langsung", "Naikkan harga setinggi mungkin", "Audit pemasaran & efisiensi biaya", "Marah pada pelanggan"],
            correct: 2,
            hint: "Cari akar masalahnya (kenapa sepi? kenapa boros?)."
        }
    ];

    const quizContainer = document.getElementById('quiz-container');
    let score = 0;
    let answeredCount = 0;

    // Render Soal
    quizData.forEach((item, index) => {
        const itemDiv = document.createElement('div');
        itemDiv.className = "quiz-item";
        
        // Soal
        const qTitle = document.createElement('span');
        qTitle.className = "quiz-question";
        qTitle.innerText = `${index + 1}. ${item.q}`;
        itemDiv.appendChild(qTitle);

        // Opsi
        const optsDiv = document.createElement('div');
        optsDiv.className = "quiz-options";
        
        item.opts.forEach((optText, optIndex) => {
            const btn = document.createElement('button');
            btn.className = "option-btn";
            btn.innerText = optText;
            btn.onclick = () => checkAnswer(btn, index, optIndex, item.correct, item.hint);
            optsDiv.appendChild(btn);
        });
        itemDiv.appendChild(optsDiv);

        // Feedback Box
        const fbDiv = document.createElement('div');
        fbDiv.id = `fb-${index}`;
        fbDiv.className = "feedback";
        itemDiv.appendChild(fbDiv);

        quizContainer.appendChild(itemDiv);
    });

    function checkAnswer(btn, qIndex, optIndex, correctIndex, hint) {
        const parent = btn.parentElement; // div.quiz-options
        const fbBox = document.getElementById(`fb-${qIndex}`);
        
        // Cegah klik berulang
        if (parent.getAttribute('data-answered') === 'true') return;
        parent.setAttribute('data-answered', 'true');
        answeredCount++;

        const allBtns = parent.querySelectorAll('.option-btn');
        
        if (optIndex === correctIndex) {
            btn.classList.add('correct');
            fbBox.innerHTML = `‚úÖ <strong>Benar!</strong> ${hint}`;
            fbBox.style.backgroundColor = "#dcfce7";
            fbBox.style.color = "#166534";
            fbBox.style.display = "block";
            score++;
        } else {
            btn.classList.add('wrong');
            allBtns[correctIndex].classList.add('correct'); // Tunjukkan yang benar
            fbBox.innerHTML = `‚ùå <strong>Kurang tepat.</strong> Jawaban benar: "${quizData[qIndex].opts[correctIndex]}".`;
            fbBox.style.backgroundColor = "#fee2e2";
            fbBox.style.color = "#991b1b";
            fbBox.style.display = "block";
        }

        // Tampilkan skor jika semua sudah dijawab
        if (answeredCount === quizData.length) {
            const scoreBox = document.getElementById('final-score');
            scoreBox.innerText = `Skor Akhir Kamu: ${score} / ${quizData.length}`;
            scoreBox.style.display = 'block';
        }
    }
</script>

</body>
